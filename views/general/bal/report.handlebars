
<table class="table table-striped table-dark text-center">
  <thead>
    <tr>
      <th>Data</th>
           <th>Usúario</th>
           <th>Periodo</th>
           <th  colspan="11">Balanças</th>
    </tr>
  </thead>
  {{#each bal}}
  <tbody>
    <tr>
      <td scope="col">{{date}}</td>
      <td scope="col">{{user}}</td>
      <td scope="col">{{period}}</td>
      <td scope="col"{{#if bal10 }}style="background:green"{{else}}{{/if}}>Bal 10</td>
      <td scope="col"{{#if bal11 }}style="background:green"{{else}}{{/if}}>Bal 11</td>
      <td scope="col"{{#if bal12 }}style="background:green"{{else}}{{/if}}>Bal 12</td>
      <td scope="col"{{#if bal13 }}style="background:green"{{else}}{{/if}}>Bal 13</td>
      <td scope="col"{{#if bal14 }}style="background:green"{{else}}{{/if}}>Bal 14</td>
      <td scope="col"{{#if bal15 }}style="background:green"{{else}}{{/if}}>Bal 15</td>
      <td scope="col"{{#if bal16 }}style="background:green"{{else}}{{/if}}>Bal 16</td>
      <td scope="col"{{#if bal17 }}style="background:green"{{else}}{{/if}}>Bal 17</td>
      <td scope="col"{{#if bal18 }}style="background:green"{{else}}{{/if}}>Bal 18</td>
      <td scope="col"{{#if bal19 }}style="background:green"{{else}}{{/if}}>Bal 19</td>
      <td scope="col"{{#if bal20 }}style="background:green"{{else}}{{/if}}>Bal 20</td>
      <td><a href="/bal/edit/{{id}}" class="btn btn-warning" >Editar</a></td>
      <td><a href="/bal/delete/{{id}}"class="btn btn-danger" >Excluir</a></td>
    </tr>
  </tbody>
      {{else}}
    <div class="form-control btn btn-danger text-center">Nenhum Aferição Encontrada</div>
    {{/each}}
</table>

