<div class="container">

<div class=" w-100 bg-light mb-4 bg-transparent">
     
      <form action="/gauging/find" method="POST">
        <div class="row d-flex justify-content-between">
        <input class="form-control mb-3 w-50 " name="month" type="month">
        <button class="btn btn-primary w-25"><img id="icon" src="/img/search.svg"></button>
        <a href="/gauging/pdf" class="btn btn-danger "><img id="icon" src="/img/pdf.svg"></a>
        <a href="/excel/{{auxmonth}}" class="btn btn-success"><img id="icon" src="/img/excel.svg"></a>
        </div>
      </form>
       <div class="row mt-3">
       <label class="form-control w-100 text-center">Dados referente ao Período: {{month}}</label>
       
      </div>
    </div>
    <div  class=" d-flex justify-content-center align-items-center">
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Data</th>
      <th scope="col">Usuário</th>
      <th scope="col">Periodo</th>
      <th scope="col" colspan="3">Ações</th>
    </tr>
  </thead>
  {{#each arrD}}
  <tbody>
    <tr>    
      <td>{{date}}</td>
      <td>{{user}}</td>
      <td>{{period}}</td>
      <td><a class="btn btn-warning" href="/gauging/edit/{{id}}">Editar</a></td>
      <td><a class="btn btn-danger" href="/gauging/delete/{{id}}/{{page}}/{{total}}">Excluir</a></td>
    </tr>
   </tbody>
   {{else}}
{{/each}}
</table>
  </div>
<br>
	{{#if prev}}
	<a href="/gauging/list/?page={{prev}}" class=" btn btn-primary ml-2"> Anterior</a>
	{{else}}
	{{/if}}
	{{#if next}}
	<a href="/gauging/list/?page={{prox}}" class="d-flex btn btn-primary float-right mr-2">Proximo</a>
	{{else}}
	{{/if}}
</div>